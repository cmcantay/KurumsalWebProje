@model IEnumerable<KurumsalWebProje.Models.Model.Admin>

@{
    ViewBag.Title = "Adminler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Adminler</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Eposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yetki)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Eposta)
        </td>
        <td>
            @{
                string sifre = item.Sifre; // Şifre verisi
                string maskeleme = new string('*', sifre.Length); // Şifreyi '*' karakterleri ile maskele
            }

            @Html.DisplayFor(modelItem => maskeleme)

            @*@Html.DisplayFor(modelItem => item.Sifre, new { htmlAttributes = new { @class = "form-control", @placeholder = "******" } })*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.AdminId }) |
            @*@Html.ActionLink("Detaylar", "Details", new { id=item.AdminId }) |*@
            @Html.ActionLink("Sil", "Delete", new { id=item.AdminId })
        </td>
    </tr>
}

</table>
